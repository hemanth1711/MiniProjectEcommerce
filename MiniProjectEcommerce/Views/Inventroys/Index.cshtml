@using MiniProjectEcommerce;
@model IEnumerable<MiniProjectEcommerce.Models.Inventory>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-6">
        <h2 style="color:#6f42c1"> 
           Inventory List
        </h2>
    </div>
     <div class="col-6 text-end">
        <a asp-action="Create" class="btn" style="background-color:#6f42c1;color:white"> &nbsp; Add inventory of Product</a>
    </div>

    <br />
    <br />
    <div class="col-lg-12 col-md-6">
      <table class=" container table table-striped">
      <tr>
        <th>
            @Html.DisplayNameFor(c => c.product.ProductName)
        </th>
         <th>
            @Html.DisplayNameFor(c => c.product.productDescription)
        </th>
         <th>
            @Html.DisplayNameFor(c => c.quantity)
        </th>
         <th>
            @Html.DisplayNameFor(c => c.reOrderLevel)
        </th>
         <th>
            @Html.DisplayNameFor(c => c.product.ProductPrice)
        </th>
        <th></th>
      </tr>
      @foreach(var item in Model)
      {
      <tr>
          <td>
              @item.product.ProductName
          </td>
          <td>
              @item.product.productDescription
          </td>
          <td>
              @item.quantity
          </td>
          <td>
              @item.reOrderLevel
          </td>
          <td>
              @item.product.ProductPrice
          </td>
          <td>
       <div class="btn-group" role="group">
  <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.Id" > Edit  </a>
  <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.Id">Details</a>
  <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"> Delete </a>
</div>
</td>
</tr>
      }
      </table>
      </div>
    </div>

