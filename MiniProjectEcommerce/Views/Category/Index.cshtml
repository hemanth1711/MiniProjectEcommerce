@using MiniProjectEcommerce;
@model IEnumerable<MiniProjectEcommerce.Models.Category>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-6">
        <h2 class="text-info"> 
            category List
        </h2>
    </div>

    <div class="col-6 text-end">
        <a asp-action="Create" class="btn btn-info"> &nbsp; New Category</a>
    </div>


<br />

<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th> 
                @Html.DisplayNameFor(c=>c.categoryName)
            </th>
            <th></th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.categoryName</td>
                <td style="width:10%">
                    <div class="btn-group" role="group">
  <a asp-action="Edit" asp-controller="Category" class="btn btn-success" asp-route-id="@item.Id" > Edit  </a>
  <a class="btn btn-warning" asp-action="Details" asp-controller="Category" asp-route-id="@item.Id">Details</a>
  <a class="btn btn-danger" asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id"> Delete </a>
</div>
                </td>
            </tr>
        }
    </table>
</div>
</div>

