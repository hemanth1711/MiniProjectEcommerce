@using MiniProjectEcommerce
@model MiniProjectEcommerce.Models.Product
@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <h2 style="color:mediumpurple">
        Edit A Product
    </h2>
    <form asp-action="Details" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="col-8">
             <div class="form-group row">
            <div class="col-6">
                <label asp-for="ProductName"></label>
            </div>
            <div class="col-6">
                <input asp-for="ProductName" readonly="readonly" class="form-control" id="validationCustom05" required/>
            </div>
            </div>
            <div class="form-group row">
            <span asp-validation-for="ProductName" class="text-danger"></span>
            <br />
             <div class="col-6">
                <label asp-for="productDescription"></label>
            </div>
            <input asp-for = "ProductImageUrl" readonly="readonly" type="hidden"/>
            <div class="col-6">
                <input asp-for="productDescription" readonly="readonly" class="form-control"  id="validationCustom05" required/>
            </div>
            <span asp-validation-for="productDescription" class="text-danger"></span>
            <br />
            </div>
            <div class="form-group row">
            <div class="col-6">
                <label asp-for="category.categoryName"></label>
            </div>
            <div class="col-6">
                <select asp-for="CategoryId"  disabled class ="form-control" asp-items="ViewBag.savecat"></select>
            </div>
            <span asp-validation-for="category.categoryName" class="text-danger"></span>
            <br />
            </div>
            <div class="form-group row">
            <div class="col-6">
                <label asp-for="ProductImageFile"> </label>
            </div>
            <div class="col-6">
                <input asp-for="ProductImageFile" disabled readonly="readonly" class="form-control" type="file">
            </div>
            <span asp-validation-for="ProductImageFile" class="text-danger"></span>
            <br />
            </div>
            <div class="form-group row">
            <div class="col-6">
                <label asp-for="ProductPrice"></label>
            </div>
            <div class="col-6">
                <input asp-for="ProductPrice" readonly="readonly" class="form-control" id="validationCustom05" required/>
            </div>
            <span asp-validation-for="ProductPrice" class="text-danger"></span>
            <br />
            </div>
            <div class="form-group row">
             <div class="col-6">
                <label asp-for="Availability"></label>
            </div>
            <div class="col-6">
                <input asp-for="Availability"disabled readonly="readonly" type="checkbox"/>
            </div>
            <span asp-validation-for="Availability" class="text-danger"></span>
            <br />
        </div>
        <div class="form-group">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id"> Edit </a>
            <a asp-action="Index" class="btn btn-success"> Back to List</a>
        </div>
        </div>
         <div class="col-1">

        </div>
         <div class="col-3">
             <img src="~/@Model.ProductImageUrl" width="100%"/>
        </div>

       
    </div>
</form>
</div>

