@using MiniProjectEcommerce;
@model IEnumerable<MiniProjectEcommerce.Models.Product>
@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <div class="col-6">
        <h2 style="color:#6f42c1"> 
            Product's List
        </h2>
    </div>
     <div class="col-6 text-end">
        <a asp-action="Create" class="btn" style="background-color:#6f42c1;color:white"> &nbsp; Add Product</a>
    </div>

    <br />
    <br />
    <div class="col-lg-12 col-md-6">
      <table class=" container table table-striped">
      <tr>
        <th>
            @Html.DisplayNameFor(c => c.ProductName)
        </th>
         <th>
            @Html.DisplayNameFor(c => c.productDescription)
        </th>
         <th>
            @Html.DisplayNameFor(c => c.category.categoryName)
        </th>
         <th>
            @Html.DisplayNameFor(c => c.Availability)
        </th>
         <th>
            @Html.DisplayNameFor(c => c.ProductPrice)
        </th>
        <th></th>
      </tr>
      @foreach(var item in Model)
      {
      <tr>
          <td>
              @item.ProductName
          </td>
          <td>
              @item.productDescription
          </td>
          <td>
              @item.category.categoryName
          </td>
          <td>
              @item.Availability
          </td>
          <td>
              @item.ProductPrice
          </td>
          <td>
       <div class="btn-group" role="group">
  <a asp-action="Edit" asp-controller="Products" class="btn btn-success" asp-route-id="@item.Id" > Edit  </a>
  <a class="btn btn-warning" asp-action="Details" asp-controller="Products" asp-route-id="@item.Id">Details</a>
  <a class="btn btn-danger" asp-action="Delete" asp-controller="Products" asp-route-id="@item.Id"> Delete </a>
</div>
</td>
</tr>
      }
      </table>
      </div>
    </div>

