@using MiniProjectEcommerce;
@model IEnumerable<MiniProjectEcommerce.Models.Category>
@{
    ViewData["Title"] = "GetCategorys";
}

<div class="row">
    <div class="col-6">
        <h2 class="text-info"> 
            category List
        </h2>
    </div>
<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th> 
                @Html.DisplayNameFor(c=>c.categoryName)
            </th>
            <th></th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.categoryName</td>
                <td style="width:10%">
                    <div class="btn-group" role="group">
  <a asp-action="AssignProducts" class="btn btn-success"  asp-route-id="@item.Id" > Assign Products  </a>
</div>
                </td>
            </tr>
        }
    </table>
</div>
</div>

